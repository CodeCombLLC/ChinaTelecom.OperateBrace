@model User
@{ 
    ViewBag.Title = "修改资料";
}
<div class="row">
    <div id="paper-top">
        <div class="col-sm-3">
            <h2 class="tittle-content-header">
                <i class="icon-folder"></i>
                <span>
                    修改资料
                </span>
            </h2>
        </div>
    </div>
</div>
<ul id="breadcrumb">
    <li>
        <span class="entypo-home"></span>
    </li>
    <li>
        <i class="fa fa-lg fa-angle-right"></i>
    </li>
    <li>
        <a href="#" title="用户管理">用户管理</a>
    </li>
    <li>
        <i class="fa fa-lg fa-angle-right"></i>
    </li>
    <li>
        <a href="#" title="用户信息">用户信息</a>
    </li>
    <li>
        <i class="fa fa-lg fa-angle-right"></i>
    </li>
    <li>
        <a asp-action="Profile" asp-controller="Account" asp-route-id="@Model.Id" title="@Model.FullName">@Model.FullName</a>
    </li>
    <li>
        <i class="fa fa-lg fa-angle-right"></i>
    </li>
    <li>
        <a href="#" title="修改资料">修改资料</a>
    </li>
</ul>
<div class="row">
    <div class="content-wrap">
        <div class="col-sm-9">
            <div class="nest">
                <div class="title-alt">
                    <h6>
                        修改资料
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#Profile">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="Profile">
                    <form asp-action="Setting" asp-controller="Account" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>旧密码</label>
                            <input name="oldpwd" type="password" placeholder="不修改密码请留空" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>新密码</label>
                            <input name="newpwd" type="password" placeholder="不修改密码请留空" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>密码重复</label>
                            <input name="confirmpwd" type="password" placeholder="不修改密码请留空" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>修改头像</label>
                            <input type="file" name="file" />
                        </div>
                        <input type="submit" class="btn btn-primary" value="修改" />
                    </form>
                </div>
            </div>
        </div>
        @Html.Partial("SideBar")
    </div>
</div>