@model IEnumerable<User>
@{ 
    ViewBag.Title = "用户管理";
}

<div class="row">
    <div id="paper-top">
        <div class="col-sm-3">
            <h2 class="tittle-content-header">
                <i class="icon-folder"></i>
                <span>
                    用户管理
                </span>
            </h2>
        </div>
    </div>
</div>
<ul id="breadcrumb">
    <li>
        <span class="entypo-home"></span>
    </li>
    <li>
        <i class="fa fa-lg fa-angle-right"></i>
    </li>
    <li>
        <a href="#" title="用户管理">用户管理</a>
    </li>
</ul>
<div class="row">
    <div class="content-wrap">
        <div class="col-sm-8">
            <div class="nest">
                <div class="title-alt">
                    <h6>
                        用户列表
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#UserList">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="UserList">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>用户名</th>
                                <th>姓名</th>
                                <th>角色</th>
                                <th>片区</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td><a asp-action="Profile" asp-controller="Account" asp-route-id="@x.Id">@x.UserName</a></td>
                                    <td>@x.FullName</td>
                                    <td>@((await User.Manager.GetRolesAsync(x)).First())</td>
                                    <td>
                                        @foreach(var y in await User.Manager.GetClaimsAsync(x))
                                        {
                                            <span>@y.Value</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Modify" asp-controller="Account" asp-route-id="@x.Id">编辑</a>
                                        <a href="javascript:Remove('@x.Id')">删除</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="nest">
                <div class="title-alt">
                    <h6>
                        创建用户
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#CreateUser">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="CreateUser">
                    <form asp-action="Create" asp-controller="Account" method="post">
                        <div class="form-group">
                            <label>用户名</label>
                            <input name="name" type="text" class="form-control" placeholder="作为登录时的用户名" />
                        </div>
                        <div class="form-group">
                            <label>密码</label>
                            <input name="pwd" type="password" class="form-control" placeholder="登录时输入的密码" />
                        </div>
                        <div class="form-group">
                            <label>姓名</label>
                            <input name="fullname" type="text" placeholder="需与明细匹配" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>角色</label>
                            <select name="Role" class="form-control">
                                <option>网格经理</option>
                                <option>网格主管</option>
                                <option>系统管理员</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>片区权限</label>
                            <textarea name="Area" class="form-control" placeholder="用英文半角逗号进行分隔">@ViewBag.Area</textarea>
                        </div>
                        <input type="submit" class="btn btn-primary" value="创建用户" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>