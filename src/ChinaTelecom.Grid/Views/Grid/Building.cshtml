@model Building
@{
    ViewBag.Title = "管理小区 - " + Model.Estate;
}
<link rel="stylesheet" href="~/assets/js/wizard/css/jquery.steps.css">
<style>
    section {
        overflow-y: auto;
    }
</style>
<div class="row">
    <div id="paper-top">
        <div class="col-sm-3">
            <h2 class="tittle-content-header">
                <i class="icon-folder"></i>
                <span>
                    管理小区
                </span>
            </h2>
        </div>
    </div>
</div>
<ul id="breadcrumb">
    <li>
        <span class="entypo-home"></span>
    </li>
    <li>
        <i class="fa fa-lg fa-angle-right"></i>
    </li>
    <li>
        <a href="#" title="网格管理">网格管理</a>
    </li>
    <li>
        <i class="fa fa-lg fa-angle-right"></i>
    </li>
    <li>
        <a asp-action="Estate" asp-controller="Grid" title="小区管理">小区管理</a>
    </li>
    <li>
        <i class="fa fa-lg fa-angle-right"></i>
    </li>
    <li>
        <a href="#" title="@Model.Estate.Title">@Model.Estate.Title</a>
    </li>
    <li>
        <i class="fa fa-lg fa-angle-right"></i>
    </li>
    <li>
        <a href="#" title="@Model.Title">@Model.Title</a>
    </li>
</ul>
<div class="col-sm-8">
    <div class="content-wrap">
        <div class="row">
            <div class="nest">
                <div class="title-alt">
                    <h6>
                        单元信息
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#Buildings">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div id="Buildings">
                    <div id="wizard-tab">
                        @for (var x = 1; x <= Model.Units; x++)
                        {
                            <h2>@x</h2>
                            <section>
                                <table class="table building">
                                    <thead>
                                        <tr>
                                            <th>楼层</th>
                                            @for (var i = 1; i <= Model.Doors; i++)
                                            {
                                                <th>@i 门</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (var i = Model.TopLayers; i >= Model.BottomLayers; i--)
                                        {
                                            if (i == 0)
                                            {
                                                continue;
                                            }
                                            <tr>
                                                <td>
                                                    @if (i > 0)
                                                    {
                                                        <span>@i 层</span>
                                                    }
                                                    else
                                                    {
                                                        <span>B@(-i) 层</span>
                                                    }
                                                </td>
                                                @for (var j = 1; j <= Model.Doors; j++)
                                                {
                                                    <td class="dragable" ondrop="drop(event)" ondragover="allowDrop(event)" data-unit="@x" data-layer="@i" data-door="@j">
                                                        @{
                                                            var house = Model.Houses.Where(a => a.Unit == x && a.Layer == i && a.Door == j).SingleOrDefault();
                                                        }
                                                        @if (house != null)
                                                        {
                                                            <div ondragstart="drag(event)" class="house-item" draggable="true" data-account="@house.Account">
                                                                @if (house.HouseStatus == HouseStatus.中国电信)
                                                                {
                                                                    <img src="~/assets/img/ct.png" draggable="false" />
                                                                    <span>@house.FullName (@house.Phone)</span>
                                                                }
                                                            </div>
                                                        }
                                                    </td>
                                                            }
                                            </tr>
                                                            }
                                    </tbody>
                                </table>
                            </section>
                                                            }
                    </div>
                </div>


            </div>
        </div>
        <div class="row">
            <div class="nest">
                <div class="title-alt">
                    <h6>
                        用户明细
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#CustomerDetail">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="CustomerDetail">
                    <div class="x-scroll">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>更新时间</th>
                                    <th>接入号</th>
                                    <th>用户状态</th>
                                    <th>用户姓名</th>
                                    <th>四级承包人名称</th>
                                    <th>四级承包体名称</th>
                                    <th>当月出账</th>
                                    <th>中投</th>
                                    <th>代理费</th>
                                    <th>一次佣金</th>
                                    <th>欠费</th>
                                    <th>装机地址</th>
                                    <th>标准地址</th>
                                    <th>套餐</th>
                                    <th>身份证号码</th>
                                    <th>联系电话</th>
                                    <th>是否家庭融合宽带</th>
                                </tr>
                            </thead>
                            <tbody id="list-customer-details"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="col-sm-4">
    <div class="content-wrap">
        <div class="row">
            <div class="nest">
                <div class="title-alt">
                    <h6>
                        未匹配用户
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#PendingAddress">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="PendingAddress">
                    <div class="pending-addresses" ondrop="drop(event)" ondragover="allowDrop(event)">
                        @foreach (Record x in ViewBag.PendingAddresses)
                        {
                            <div class="pending-address" draggable="true" ondragstart="drag(event)" data-account="@x.Account">
                                @x.ImplementAddress
                            </div>
                        }
                    </div>
                    <span>将未匹配的用户拖拽至楼层以建立关联关系，将楼层中已有用户拖拽至此可解除关联。</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="nest">
                <div class="title-alt">
                    <h6>
                        添加其他运营商用户
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#OtherProvider">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="OtherProvider">
                    <form asp-controller="Grid" asp-action="CreateHouse" asp-route-id="@Model.Id">
                        <div class="form-group">
                            <label>单元</label>
                            <select name="unit" class="form-control">
                                @for (var i = 1; i <= Model.Units; i++)
                                {
                                    <option>@i</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>楼层</label>
                            <select name="layer" class="form-control">
                                @for (var i = Model.TopLayers; i >= Model.BottomLayers; i--)
                                {
                                    @if (i == 0) { continue; }
                                    <option>@i</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>门</label>
                            <select name="door" class="form-control">
                                @for (var i = 1; i <= Model.Doors; i++)
                                {
                                    <option>@i</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>运营商</label>
                            <select id="lstProviders" name="provider" class="form-control">
                                @foreach (var x in Enum.GetNames(typeof(HouseStatus)))
                                {
                                    <option>@x</option>
                                }
                            </select>
                        </div>
                        <div class="form-group house-account-field">
                            <label>接入号</label>
                            <input type="text" class="form-control" name="account" />
                        </div>
                        <div class="form-group house-details">
                            <label>姓名</label>
                            <input type="text" class="form-control" name="fullname" />
                        </div>
                        <div class="form-group house-details">
                            <label>联系电话</label>
                            <input type="text" class="form-control" name="phone" />
                        </div>
                        <input type="submit" class="btn btn-primary" value="提交" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/wizard/build/jquery.steps.js"></script>
<script>
    var buildingid = '@Model.Id';
    var item;
    $(document).ready(function () {
        DisplayFields();

        $("#wizard-tab").steps({
            headerTag: "h2",
            bodyTag: "section",
            transitionEffect: "none",
            enableFinishButton: false,
            enablePagination: false,
            enableAllSteps: true,
            titleTemplate: "#title#",
            cssClass: "tabcontrol"
        });
    });

    function allowDrop(ev) {
        ev.preventDefault();
    }

    function drag(ev) {
        console.log(ev);
        console.log(ev.target);
        item = ev.target;
    }

    function drop(ev) {
        ev.preventDefault();
        $(ev.target).append($(item));
        console.log(item);
        if ($(ev.target).hasClass('pending-addresses')) {
            console.log('解除楼层对应');
            $.post('/Grid/Transfer', { account: $(item).attr('data-account') }, function () { });
        }
        else {
            console.log('添加楼层对应');
            $.post('/Grid/Transfer', {
                buildingid: buildingid,
                account: $(item).attr('data-account'),
                unit: $(ev.target).attr('data-unit'),
                layer: $(ev.target).attr('data-layer'),
                door: $(ev.target).attr('data-door')
            }, function () { });
        }
    }

    function DisplayFields() {
        if ($('#lstProviders').val() == "中国电信") {
            $('.house-details').hide();
            $('.house-account-field').show();
        } else {
            $('.house-details').show();
            $('.house-account-field').hide();
        }
    }

    $('#lstProviders').change(function () {
        DisplayFields();
    });
</script>